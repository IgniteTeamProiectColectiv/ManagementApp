@model Ignition.Models.UserLogin

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="../CSS/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        .logoBg {
            background-color: #c8daf6;
        }

        .form {
            background-color: #5f80b4;
            border-radius: 5%;
            box-shadow: 2px 5px 5px;
        }

        .text-color-white {
            color: #ffffff;
        }

        .login-btn-text-color {
            color: #5f80b4;
        }

        .margin-login-btn {
            margin-bottom: 3%;
        }

    </style>
</head>
<body class="logoBg">

    <div class="jumbotron logoBg">
        <img src="~/Images/Login.png" class="img-responsive center-block">
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4 form">
                <h1 class="text-center text-color-white">Login</h1>
